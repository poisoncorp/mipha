{% extends 'base.html.twig' %}

{% block body %}
    <h1>Signaletique</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ signaletique.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ signaletique.firstname }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ signaletique.name }}</td>
            </tr>
            <tr>
                <th>Born</th>
                <td>{% if signaletique.born %}{{ signaletique.born|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('signaletique_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('signaletique_edit', { 'id': signaletique.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
